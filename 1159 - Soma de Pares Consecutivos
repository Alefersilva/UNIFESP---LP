#include <stdio.h>
int main()
{
    int n,x,y=0;
    while(1) {
    scanf("%d", &n);
    y=0;
        if(n==0)
            break;
    		else if(n%2==0) {
            for(x=n; x<=n+8; x+=2) y+=x;
       		}
        		else {
            	for(x=n+1;x<=n+9;x+=2) y+=x;
        		}
        printf("%d\n", y);
    }
    return 0;
}
